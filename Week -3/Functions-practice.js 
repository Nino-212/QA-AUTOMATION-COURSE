// Task 1 Clean & Format Text 

function snowStorm(disaster){
    let cleanNewYork = disaster.trim();
    const lifeInNewYork = cleanNewYork. toLowerCase ();
    return lifeInNewYork;  
}
console.log(snowStorm ("disaster in New York"));


//2. Task: First $ Last Character 

function firstAndLastCharacter(task) {
  let text = task.trim();
  let first = text[0];
  let last = text[text.length - 1];
  return first + last;
}

//Task: Word Counter 

function wordCounter(task){
let words = task.split (" ");
return words.length;
}

