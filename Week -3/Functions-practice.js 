// Task 1 Clean & Format Text 

function snowStorm(disaster){
    let cleanNewYork = disaster.trim();
    const lifeInNewYork = cleanNewYork. toLowerCase ();
    return lifeInNewYork;  
}
console.log(snowStorm ("disaster in New York"));


//2. Task: First $ Last Character 

function firstAndLastCharacter(task) {
  let text = task.trim();
  let first = text[0];
  let last = text[text.length - 1];
  return first + last;
}

//Task: Word Counter 

function wordCounter(task){
let words = task.split (" ");
return words.length;
}

//Part 2 ARRAY + Function  

//Task 4: Brand Checker

function brandChecker() {
  if (carBrands.includes("BMW")) {
    return "Brand exists";
  } else {
    return "Brand not found";
  }
}

//Task 5 Get Last Brand 
function getLastBrand(carBrands) {
    return carBrands[carBrands.length - 1];
}

console.log(getLastBrand(carBrands)); // Tesla


// Task 6 Format Brands List 

function formatList(carBrands) {
  return carBrands.join(",");
}

console.log(formatList(carBrands));

//Part 3 NUMBER + FUNCTIONS

//Task 7 Safe Rounding 

function safeRounding(number) {
  if (typeof number !== "number") {
    return "Invalid number";
  }
  return Math.round(number);
}

console.log(safeRounding(priceBMW));

// Task 8 

function comparePrices(price1, price2) {
  if (price1 === price2) {
    return "Prices are equal";
  }
  if (price1 > price2) {
    return "First is higher";
  }
  return "Second is higher";
}

console.log(comparePrices(priceBMW, priceTesla));

//Task 9

function getRandomNumber() {

  return Math.floor(Math.random() * 10) + 1;
}

console.log(getRandomNumber());

  // random number from 1 to 10


//Task 10 

// Task 10
function budgetCheck(carPrice, userBudget) {

    if (carPrice <= 0 || userBudget <= 0) {
        return "Invalid input";
    }

    if (carPrice <= userBudget) {
        return "Within budget";
    }

    return "Over budget";
}

console.log(budgetCheck(5000, 7000)); // Within budget
console.log(budgetCheck(9000, 7000)); // Over budget
console.log(budgetCheck(-1, 7000));   // Invalid input